{% extends "RestooMainBundle::layout.html.twig" %}

{% block title "Packages" %}
{% block subheadline "Packages" %}

{% block submenu %}
	{% include 'RestooMainBundle:Package:submenu.html.twig' %}
{% endblock %}

{% block content %}
<table>
	<tr>
		<th>Title</th>
		<th>Start Date</th>
		<th>End Date</th>
		<th>Created by</th>
		<th>Jobs (Effort)</th>
		<th>Actions</th>
	</tr>
	{% for package in packages %}
		<tr>
			<td>{{ package.title }}</td>
			<td>{{ package.startDate|date("d.m.Y") }}</td>
			<td>{{ package.endDate|date("d.m.Y") }}</td>
			<td>{{ package.reporter }}</td>
			<td>{{ package.jobs|length }} ({{ package.effort }}h)</td>
			<td>
				<a href="{{ path('package_edit', { 'id': package.id }) }}">edit</a>
				<a href="{{ path('package_show', { 'id': package.id }) }}">show</a>
			</td>
		</tr>
	{% else %}	
		<tr>
			<td colspan="6">No Packages found</td>
		</tr>
	{% endfor %}
	
	</table>
{% endblock %}